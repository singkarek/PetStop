<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg3"
    tools:context=".daftar">
    <include layout="@layout/header"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Daftar Titip"
        android:textSize="17sp"
        android:textColor="@color/black"/>
    <TextView
        android:textColor="@color/DarkBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jenis Hewan :"/>
    <Spinner
        android:id="@+id/jenis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/jenis_hewan"/>
    <TextView
        android:textColor="@color/DarkBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama :"/>
    <EditText
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"/>
    <TextView
        android:textColor="@color/DarkBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perlakuan Khusus :"/>
    <EditText
        android:id="@+id/perlakuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="20"/>
    <TextView
        android:textColor="@color/DarkBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Durasi Titip (Hari) :"/>
    <EditText
        android:id="@+id/durasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:inputType="number"/>
    <Button
        android:id="@+id/btn_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"/>
    <TextView
        android:textColor="@color/DarkBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Biaya :"/>
    <TextView
        android:textColor="@color/DarkRed"
        android:id="@+id/biaya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/DarkRed"
        android:id="@+id/detailbiaya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mohon"/>
    <Button
        android:id="@+id/btn_daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Daftar"/>
    <Button
        android:id="@+id/btn_batal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Kembali"/>

</LinearLayout>